<h1>Lista de Usuarios</h1>

<table class="table">
  <tr>
    <th>Nome</th>
    <th>Email</th>
    
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name , user_path(user)%></td>
    <td><%= user.email %></td>
    
    <td><%= link_to 'Alterar', edit_user_path(user), class: "btn btn-small btn-info" %></td>
    <td><%= link_to 'Eliminar', user, class: "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class="form-actions">
<center>
<%= link_to '+ Novo Usuario', new_user_path, class: "btn btn-large btn-success" %>
</center>
</div>